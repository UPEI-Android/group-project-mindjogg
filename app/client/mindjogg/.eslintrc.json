{
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "prefer-const": "error",
        "quotes": "error",
        "no-inline-comments": "error",
        "semi-style": "error",
        "require-await": "error",
        "react/prop-types": ["error", { "ignore": ["navigation"] }]
    }
}
